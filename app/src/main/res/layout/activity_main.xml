<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playoke!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@+id/music_bottom_sheet_trigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="5dp">
        <ImageView
            android:id="@+id/music_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/img_music"
            android:layout_alignParentLeft="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/music_img"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sunday Morning"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maroon 5"
                android:textSize="@dimen/text"/>
        </LinearLayout>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_add"
            android:tint="@color/blue"
            android:background="#00000000"
            android:layout_toLeftOf="@+id/play_stop_btn"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/play_stop_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_play_circle_outline"
            android:layout_alignParentRight="true"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>